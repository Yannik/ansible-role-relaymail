#!/bin/sh -e
# {{ ansible_managed }}
#
# This script should be included in your rc.local
#

# only allow postfix to go out on port 25:
iptables -I OUTPUT -m tcp -p tcp --dport 25  -m owner ! --uid-owner postfix -j REJECT --reject-with icmp-admin-prohibited
ip6tables -I OUTPUT -m tcp -p tcp --dport 25 -m owner ! --uid-owner postfix  -j REJECT --reject-with icmp6-adm-prohibited
exit 0
